{
    "train_batch_size": 16,
    "gradient_accumulation_steps": 1,
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 0.0001,
            "weight_decay": 1e-5,
            "betas": [
                0.9,
                0.999
            ]
        }
    },
    "bf16": {
        "enabled": true
